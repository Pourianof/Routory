{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/routory",
    "declarationDir": "./dist/routory/compiled",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
